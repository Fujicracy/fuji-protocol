{
  "name": "@fuji/hardhat",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.6.0",
    "@openzeppelin/contracts-upgradeable": "4.6.0",
    "@openzeppelin/hardhat-defender": "^1.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "@tenderly/hardhat-tenderly": "1.0.12",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.1.2",
    "ethers": "^5.4.4",
    "hardhat": "^2.6.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "1.0.4",
    "node-watch": "^0.7.0",
    "ora": "5.4.1",
    "qrcode-terminal": "^0.12.0",
    "ramda": "^0.27.1",
    "redstone-evm-connector": "2.1.7"
  },
  "scripts": {
    "fork": "hardhat node --hostname 0.0.0.0",
    "test": "hardhat test --network localhost",
    "contracts:size": "hardhat size-contracts",
    "compile": "hardhat compile",
    "deploy": "yarn deploy:mainnet && yarn publish:core",
    "deploy:mainnet": "hardhat run scripts/mainnet/00_initial_deploy.js",
    "deploy:mainnet:fuse": "hardhat run scripts/mainnet/01_deploy_fuse.js",
    "deploy:fantom": "hardhat run scripts/fantom/00_initial_deploy.js",
    "deploy:fantom:game": "yarn deploy:fantom && hardhat run scripts/fantom/01_new_wbtc_vault.js && hardhat run scripts/fantom/02_new_weth_vaults.js && hardhat run scripts/fantom/05_nft_game.js",
    "publish:core": "hardhat publish",
    "publish:fuse": "hardhat publish --market fuse",
    "sync": "hardhat sync",
    "lint": "echo 1",
    "lint:fix": "echo 1",
    "format": "echo 1",
    "lint:sol": "solhint -f table contracts/**/*.sol",
    "lint:js": "eslint -f table test/*.js",
    "format:sol": "prettier --write contracts/*",
    "format:js": "prettier --write test/*",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
    "account": "hardhat account"
  }
}
